<resources>
    <declare-styleable name="ArticleItem">
        <attr name="exampleString" format="string" />
        <attr name="exampleDimension" format="dimension" />
        <attr name="exampleColor" format="color" />
        <attr name="exampleDrawable" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SubscribeButton">
        <attr name="subscribeDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SettingItemText">
        <attr name="settingItemIcon" format="reference"/>
        <attr name="settingItemTitle" format="string"/>
        <attr name="settingItemSubtitle" format="string"/>
        <attr name="settingItemShowArrow" format="boolean"/>
        <attr name="settingItemSubtitleColor" format="color|reference"/>
        <attr name="settingItemSubtitleSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SettingItemSwitch">
        <attr name="settingItemIcon"/>
        <attr name="settingItemTitle"/>
        <attr name="settingItemChecked" format="boolean"/>
    </declare-styleable>
</resources>
